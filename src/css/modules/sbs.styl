$gutter-width = 5%

.sbs-group
  margin 0 auto
  display flex
  max-width 1160px
  width 99% - $gutter-width
  height 300px
  justify-content space-between
  flex-wrap wrap
.sbs-single
  position relative
  flex-grow 1
  max-width 50%
  height 100%
  margin-bottom 50px
.sbs-single
  &[data-status="table"]
    order 2
  &[data-status="table"],
  &[data-status="result"]
    border 1px solid #ccc
  &[data-status="empty"]
    display none
  &[data-status="result"]
    order 1
    max-width 100%
    width 100%
    height 200px
    .table-container table
      margin-top 10px
  &[data-status="result"]
    .table-btn-group,
    .pick-column,
    th input
      display none
.gutter-swap
  position relative
  height 100%
  width $gutter-width
  order 2
  &:hover
    cursor pointer
    &:after
      color #000
  &:active
    &:after
      color #999
