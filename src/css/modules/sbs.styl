$gutter-width = 5%

.sbs-group
  margin 0 auto
  display flex
  max-width 1160px
  width 99% - $gutter-width
  height 300px
  justify-content space-between
  flex-wrap wrap
.sbs-single
  position relative
  flex-grow 1
  width 47% // This would be better if it were set via gutter-width
  height 100%
  margin-bottom 50px
  &[data-side="left"]
    order 1
  &[data-side="right"]
    order 3
  &[data-status="table"],
  &[data-status="result"]
    border 1px solid #ccc
  &[data-status="empty"]
    display none
  &[data-status="result"]
    order 0
    width 100%
    height 200px
    .table-container table
      margin-top 10px
    &[data-dirty="true"]
      .rejoin-button-container
        display block
        z-index 2
      .table-container
        filter blur(4px)
      &:before,
      &:after
        position absolute
      &:before
        content 'Your data has changed. Rejoin?'
        top 25%
        left 50%
        font-size 15px
        transform translate(-50%, -50%)
        background-color #fff
        text-align center
        border 1px solid #000
        padding 3px
        z-index 2

      &:after
        content ' '
        top 0
        bottom 0
        right 0
        left 0
        background-color rgba(255, 255, 255, .5)
        z-index 1
  &[data-status="result"]
    .table-btn-group,
    .pick-column,
    th input
      display none
  .rejoin-button-container
    position absolute
    top 45%
    transform translate(-50%, -50%)
    display none
    left 50%
.gutter-swap
  position relative
  height 100%
  width $gutter-width
  order 2
  &:hover
    cursor pointer
    &:after
      color #000
  &:active
    &:after
      color #999
  &:after
    position absolute
    content 'â‡„'
    color #ccc
    text-align center
    top 42%
    font-size 21px
    right 0
    bottom 0
    left 0
    +below(625px)
      font-size 18px
    +below(400px)
      font-size 16px
  &.hidden
    visibility hidden
