$border-blue = #66baff

.sbs-single
  .upload-input
    opacity 0
  .upload-container
    display none
  .upload-container,
  .upload-label,
  .upload-input
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    cursor pointer
  .upload-label
    overflow hidden
    border 3px dashed $border-blue
    &:before,
    &:after
      position absolute
      text-align center
      width 100%
      transform translate(0, -50%)
    &:after
      top calc(40% + 35px)
      color #666
      font-size 14px
      content 'Drop files or click to upload'
      +below(404px)
        width 80%
        left 50%
        transform translate(-50%, 0)
    &:before
      top 40%
      font-size 28px
      color #000
      opacity .25
      font-weight bold
  &[data-side="left"]
    .upload-label
      &:before
        content 'Existing data'
  &[data-side="right"]
    .upload-label
      &:before
        content 'New data to add'
  &[data-status="upload-ready"]
    .input-options
      display block
    .paste-container
      display none
  &[data-status="upload-ready"],
  &[data-status="dragover"],
  &[data-status="drop"]
    .upload-container
      display block
  &[data-status="dragover"]
    .upload-label
      // border-color lighten(#66baff, 50%)
      border-color red
      &:after
        content 'Drop drop drop!'
  &[data-status="drop"]
    pointer-events none
    .upload-label
      border 3px solid #000
      &:after
        content 'Processing...'
        animation rotateAnimation 1600ms linear infinite
