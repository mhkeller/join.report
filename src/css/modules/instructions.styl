#instructions
  position relative
  margin 20px auto 30px auto
  width 94%
  max-width 1160px
  min-height 115px
  .pre
    background-color #ccc
    font-family monospace
    padding 0 2px
  h2
    font-size 24px
    margin 5px 0 15px 0
    letter-spacing 1px
    word-spacing -1px
    color #fff
    text-shadow -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;
  p
    font-size 14px
    line-height 16px
    margin 0 0 3px 0
    max-width 800px
  #download-result
    position absolute
    top 38px
    right 0
    margin-top 3px
    &[data-open="true"]
      .download-formats
        display block
        color #000
        font-weight normal
      .download-format
        z-index 9
    .download-formats
      right 0
      font-size 13px
      border 1px solid #000
      width 140px
      transform translate(1px, 8px)
      .download-format
        display inline-block
        vertical-align top

  .inst-el
    .line-break
      display block
      margin-bottom 3px
    .bold
      font-weight bold
    &[data-which="prose-full"]
      display none
      max-height 200px
      overflow-y scroll
      padding 10px
      box-shadow 0 0 6px #ccc inset
      &.show
        display block
  .expand
    color #666
    display inline-block
    min-width 100px
    cursor pointer
    &:hover
      &:before
        text-decoration underline
    &:before
      content 'Show details'
    &:after
      position relative
      content 'â€£'
      display inline-block
      font-size 28px
      padding-left 3px
    &[data-open="false"]:after
      top 6px
    &[data-open="true"]
      &:before
        content 'Hide'
      &:after
        top 2px
        transform rotate(90deg)
