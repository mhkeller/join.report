.table-container
  width 100%
  height 100%
  .error-message
    width 100%
    position relative
    text-align center
    top 50%
    transform translate(0, -50%)
  .restart
    color blue
    cursor pointer
    &:hover
      text-decoration underline
  table
    border-collapse collapse
    margin 0 auto
  th
    text-align center
  td,
  th
    border 1px solid #ccc
    padding 5px
