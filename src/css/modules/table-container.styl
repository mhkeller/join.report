$hover-color = #eee
$remove-width = 55px

.table-group
  width 100%
  height 100%
.table-btn-group
  transform translate(0, -22px)
.table-btn
  position relative
  opacity .3
  display inline-block
  right -3px
  vertical-align top
  cursor pointer
  min-width 18px
  padding-right 3px
  &:hover
    opacity 1
  &[data-which="reset"]
    &:after
      content url('../img/trashcan.svg')
  &[data-which="download"]
    width 20px
    margin-right 6px
    z-index 2
    &:hover
      .download-formats
        display block
    &:after
      content url('../img/download.svg')
  .download-formats
    right 0
    bottom 3px
    transform translate(90%, 0)
    font-size 13px
    border 1px solid #000
    box-shadow 0 0 6px #fff
    &:before
      content ' '
      background-color transparent
      position absolute
      top -15px
      right -5px
      bottom 0
      left -15px
      z-index -1
.table-btn-group,
.pick-column
  position absolute
  top 0
.table-btn-group
  right 0
.pick-column
  white-space nowrap
  font-size 14px
  left 50%
  background-color yellow
  color #000
  padding 0 3px
  transform translate(-50%, -130%)
  &[data-col-selected='true']
    display none
  &:before
    content 'pick a column to join on'
    +below(745px)
      content 'pick a column'
  +below(615px)
    transform translate(-50%, -270%)
.table-container
  position relative
  padding-left 10px
  width calc(100% - 10px) // Match padding-left value
  height 100%
  overflow scroll
  .error-message
    width 100%
    position relative
    text-align center
    top 50%
    transform translate(0, -50%)
  .reset
    color blue
    cursor pointer
    &:hover
      text-decoration underline
  table
    border-collapse collapse
    margin 24px auto 20px auto
  tr
    &:hover
      background-color $hover-color
      cursor pointer
      td:last-child
        background-color #fff
        border-top 1px solid $hover-color
        border-bottom 1px solid $hover-color
  th
    position relative
    white-space nowrap
    text-align left
    // user-select none
    overflow visible
    input[type='radio']
      position absolute
      width 100%
      margin 0
      top 0
      left 0
      transform translate(0, -150%) scale(.9)
      cursor pointer
    .sort-container
      // background-color #f0c
      position absolute
      top 5px
      right 2px
      bottom 0
      opacity .3
      &:hover
        opacity 1
        cursor pointer
      &:after
        display inline-block
        vertical-align top
        content url(../img/sort.svg)
        position relative
        width 14px
        // margin-top -3px
        // padding-left 10px
      &.sorted
        opacity 1
        &[data-asc="true"]:after,
        &[data-asc="false"]:after
          color #f0c
        &[data-asc="true"]:after
          content url(../img/sort-ascending.svg)
        &[data-asc="false"]:after
          content url(../img/sort-descending.svg)
  .cast-options-wrapper
    position relative
    display inline-block
    vertical-align top
    right -3px
    margin-right 15px
    padding-right 10px
    user-select none
    // &:hover:after
    //   background-image url(../img/arrow-black.png)
    // &:after
    //   content ' '
    //   position absolute
    //   top 0
    //   right 0
    //   bottom 0
    //   left 0
    //   background #fff url(../img/arrow-gray.png) center left no-repeat
    //   background-size 15%
    //   pointer-events none
    select
      position relative
      appearance none
      outline none
      border 0
      font-size 12px
      color #ccc
      background-color transparent
      option
        background-color #fff
        color #000
      &:hover
        cursor pointer
    &[data-type="string"]
      .cast-option[data-type="string"]
        color #000
        &:hover
          cursor default
          color #fff
    &[data-type="number"]
      .cast-option[data-type="number"]
        color #000
        &:hover
          cursor default
          color #fff
    &[data-type="date"]
      .cast-option[data-type="date"]
        color #000
        &:hover
          cursor default
          color #fff
    // &:after
    //   content ' '
    //   position relative
    //   top 8px
    //   width 0
    //   height 0
    //   border-left 4px solid transparent
    //   border-right 4px solid transparent
    //   border-top 5px solid #ccc
    // &:hover
    //   cursor pointer
    //   &:after
    //     border-top-color #000
    .cast-options-container
      display none
      position absolute
      font-weight normal
      background-color #fff
      // background-color rgba(255, 255, 255, .9)
      border 1px solid #000
      top 13px
      z-index 2
    &:hover
      border-top-color #000
      .cast-options-container
        display block
    .cast-option
      position relative
      padding 4px
      font-size 13px
      color #ccc
      &:hover
        color #fff
        background-color #000

  td,
  th
    border 1px solid #ccc
    padding 5px
    &.active
      position relative
      background-color yellow
      background-origin padding-box
      background-clip padding-box
      // &:not(input):hover
      //   cursor pointer
      //   text-decoration underline
  th.active
    .cast-options-wrapper
      &:after
        background-color yellow
  td
    outline 0px solid transparent !important
    position relative
    &[contenteditable="true"]
      &:after
        position absolute
        content ' '
        top -2px
        right 0
        bottom 0
        left -2px
        pointer-events none
        border 2px solid blue
    &[data-type="number"]
      text-align right
  th:last-child,
  td:last-child
    border-color transparent
  th:last-child
    pointer-events none
    &:after
      content ''
  tr[data-deleted="true"]
    td:not(:last-child)
      text-decoration line-through
      color #ccc
    a
      &:hover
        color #ccc !important
  .row-delete
    position relative
    // width 32px
    font-size 16px
    // background-color #fc0
    &:hover
      cursor default
    a
      text-decoration none
      color #ccc
      user-select none
    span
      position absolute
      top 50%
      left 2px
      transform translate(0, -50%)
      font-weight bold
      &:hover
        text-decoration underline
        color red
      &.restore-row
        font-size 20px
        &:hover
          color green
