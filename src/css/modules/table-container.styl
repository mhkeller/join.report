$hover-color = #eee
$remove-width = 55px

.sbs-single
  &[data-status="table"]
    border 1px solid #ccc
.table-group
  width 100%
  height 100%
.table-btn-group
  transform translate(0, -22px)
.table-btn
  opacity .3
  display inline-block
  vertical-align top
  cursor pointer
  min-width 18px
  padding-right 3px
  &:hover
    opacity 1
  &[data-which="reset"]
    &:after
      content url('../img/trashcan.svg')
  &[data-which="download"]
    font-size 23px
    font-weight bold
    padding 0 3px
    &:after
      content '⤓'
.table-btn-group,
.pick-column
  position absolute
  top 0
.pick-column
  font-size 16px
  padding 0 4px
  left 50%
  background-color yellow
  color #000
  transform translate(-50%, -120%)
  &[data-col-selected='true']
    display none
.table-container
  position relative
  padding-left 10px
  width calc(100% - 10px) // Match padding-left value
  height 100%
  overflow scroll
  .error-message
    width 100%
    position relative
    text-align center
    top 50%
    transform translate(0, -50%)
  .reset
    color blue
    cursor pointer
    &:hover
      text-decoration underline
  table
    border-collapse collapse
    margin 24px auto 20px auto
  tr
    &:hover
      background-color $hover-color
      cursor pointer
      td:last-child
        border-top 1px solid $hover-color
        border-bottom 1px solid $hover-color
  th
    position relative
    white-space nowrap
    text-align center
    user-select none
    cursor pointer
    input[type='radio']
      position absolute
      width 100%
      height 50%
      margin 0
      top 0
      left 0
      transform translate(0, -150%)
      cursor pointer
    &:after
      display inline-block
      vertical-align top
      content '↑↓'
      positoin relative
      margin-top -3px
      padding-left 3px
      color #ccc
      letter-spacing -2px
    &.sorted
      &[data-asc="true"]:after,
      &[data-asc="false"]:after
        color #f0c
        padding-right 6px
      &[data-asc="true"]:after
        content '↑'
      &[data-asc="false"]:after
        content '↓'

  td,
  th
    border 1px solid #000
    padding 5px
    &.active
      position relative
      background-color yellow
      background-origin padding-box
      background-clip padding-box
      // &:not(input):hover
      //   cursor pointer
      //   text-decoration underline
  td
    outline 0px solid transparent !important
    &[contenteditable="true"]
      // padding 10px
      border 2px solid blue
  th:last-child,
  td:last-child
    border-color transparent
  th:last-child
    pointer-events none
    &:after
      content ''
  tr[data-deleted="true"]
    td:not(:last-child)
      text-decoration line-through
      color #ccc
    a
      &:hover
        color #ccc !important
  .row-delete
    position relative
    // width 32px
    font-size 16px
    // background-color #fc0
    &:hover
      cursor default
    a
      text-decoration none
      color #ccc
      user-select none
    span
      position absolute
      top 50%
      left 2px
      transform translate(0, -50%)
      font-weight bold
      &:hover
        text-decoration underline
        color red
      &.restore-row
        font-size 20px
        &:hover
          color green
