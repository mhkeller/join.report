.table-container
  width 100%
  height 100%
  .error-message
    width 100%
    position relative
    text-align center
    top 50%
    transform translate(0, -50%)
  .restart
    color blue
    cursor pointer
    &:hover
      text-decoration underline
  table
    border-collapse collapse
    margin 0 auto
  th
    text-align center
    user-select none
    cursor pointer
    &:after
      display inline-block
      vertical-align top
      content '↑↓'
      positoin relative
      margin-top -3px
      padding-left 3px
      color #ccc
      letter-spacing -2px
    &.sorted
      &[data-asc="true"]:after,
      &[data-asc="false"]:after
        color #f0c
        padding-right 6px
      &[data-asc="true"]:after
        content '↑'
      &[data-asc="false"]:after
        content '↓'

  td,
  th
    border 1px solid #ccc
    padding 5px
